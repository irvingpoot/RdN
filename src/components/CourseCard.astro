---
interface Props {
    image: string;
    title: string;
    author: string;
    price: string;
    videoCount: number;
    duration: string;
    tag?: string;
}

const { 
    image, 
    title, 
    author, 
    price, 
    videoCount, 
    duration, 
    tag = "All Levels" 
} = Astro.props;
---

<article class="w-full max-w-[340px] bg-slate-50 rounded-[2.5rem] p-4 shadow-sm hover:shadow-md transition-shadow duration-300 font-sans">
    <div class="relative w-full h-48 mb-4 group overflow-hidden rounded-3xl">
        <span class="absolute top-4 left-4 bg-white px-3 py-1.5 rounded-xl text-xs font-semibold text-slate-700 shadow-sm z-10">
            {tag}
        </span>
    
        <img src={image} alt={title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 ease-out"/>
    </div>

    <div class="px-1 pb-2">
    
        <div class="flex justify-between items-start mb-1">
            <h3 class="text-xl font-bold text-slate-900 leading-tight pr-4">
                {title}
            </h3>
            <span class="text-xl font-bold text-blue-950">
                {price}
            </span>
        </div>

        <p class="text-xs font-bold text-slate-500 uppercase tracking-wide mb-5">
            {author}
        </p>

        <div class="flex items-center gap-6 mb-6 text-slate-500 text-sm font-medium">
            <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-slate-300">
                    <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm14.024-.983a1.125 1.125 0 010 1.966l-5.603 3.113A1.125 1.125 0 019 15.113V8.887c0-.857.921-1.4 1.671-.983l5.603 3.113z" clip-rule="evenodd" />
                </svg>
                <span>{videoCount} Videos</span>
            </div>

            <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-slate-300">
                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z" clip-rule="evenodd" />
                </svg>
                <span>{duration}</span>
            </div>
        </div>

        <button class="w-full py-3 rounded-full border-2 border-blue-950 text-blue-950 font-semibold text-sm hover:bg-blue-950 hover:text-white transition-colors duration-300">
            Ver Curso
        </button>
    </div>
</article>