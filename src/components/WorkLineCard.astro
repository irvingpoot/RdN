---
interface Props {
    title: string;
    description: string;
    image: string;
    icon: string; // Path del SVG
    index: number;
}

const { title, description, image, icon, index } = Astro.props;

const isEven = index % 2 === 0;
---

<div class="relative flex flex-col md:flex-row items-center gap-6 md:gap-0 py-12 md:py-16 group">
    
    <div class={`relative w-full md:w-7/12 h-[300px] md:h-[450px] rounded-3xl overflow-hidden shadow-xl transition-transform duration-700 hover:scale-[1.02] z-0 ${isEven ? 'md:mr-[-5%] md:order-1' : 'md:ml-[-5%] md:order-2'}`}>
        <img 
            src={image} 
            alt={title} 
            class="w-full h-full object-cover filter brightness-[0.85] group-hover:brightness-100 transition-all duration-500"
        />
        <div class="absolute inset-0 bg-blue-950/20 mix-blend-multiply group-hover:bg-transparent transition-colors duration-500"></div>
    </div>

    <div class={`relative w-full md:w-6/12 bg-white/95 backdrop-blur-sm p-8 md:p-10 rounded-3xl shadow-2xl border border-gray-100 z-10 flex flex-col justify-center transition-all duration-500 group-hover:-translate-y-2 group-hover:shadow-blue-900/10 ${isEven ? 'md:order-2' : 'md:order-1'}`}>
        
        <span class="absolute top-4 right-6 text-8xl font-bold text-gray-100 -z-10 font-[PlayfairDisplay] opacity-50 select-none">
            0{index + 1}
        </span>

        <div class="w-14 h-14 mb-6 rounded-2xl bg-blue-50 text-blue-950 flex items-center justify-center group-hover:bg-blue-950 group-hover:text-cyan-400 transition-colors duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8">
                <fragment set:html={icon} />
            </svg>
        </div>

        <h3 class="text-3xl md:text-4xl font-bold text-blue-950 mb-4 font-[PlayfairDisplay] leading-tight">
            {title}
        </h3>
        
        <div class="w-12 h-1 bg-cyan-500 mb-6 rounded-full group-hover:w-24 transition-all duration-500"></div>

        <p class="text-gray-600 text-lg leading-relaxed">
            {description}
        </p>

        <div class="mt-8 flex items-center gap-2 text-cyan-600 font-bold uppercase text-xs tracking-widest cursor-pointer group/btn">
            <span>Saber m√°s</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform duration-300 group-hover/btn:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
        </div>
    </div>
</div>