---
import Layout from "../layouts/Layout.astro"
import CourseCard from "../components/CourseCard.astro"
const courses = [
    {
        image: "https://images.unsplash.com/photo-1620121692029-d088224ddc74?auto=format&fit=crop&w=600&q=80",
        title: "Fundamentos de Neuroplasticidad Clínica",
        author: "Elena Villanueva",
        price: "120 MXN",
        videoCount: 18,
        duration: "6 Horas",
        tag: "Fundamentos"
    },
    {
        image: "https://images.unsplash.com/photo-1559757175-5700dde675bc?auto=format&fit=crop&w=600&q=80",
        title: "Neuroimagen: Interpretación Básica",
        author: "Miguel Torres",
        price: "195 MXN",
        videoCount: 24,
        duration: "10 Horas",
        tag: "Profesional"
    },
    {
        image: "https://images.unsplash.com/photo-1530973428-5bf2db2e4d71?auto=format&fit=crop&w=600&q=80",
        title: "Bases Neurobiológicas del Aprendizaje",
        author: "Shirla Santana",
        price: "90 MXN",
        videoCount: 12,
        duration: "4 Horas",
        tag: "Educación"
    }
];

---

<Layout title="Cursos RDN">
    <div class="flex flex-col gap-5 items-center justify-center p-20 m-15 text-gray-50 bg-[url(/cursosbanner.webp)] bg-cover bg-center bg-blue-950 bg-blend-soft-light">
        <h1 class="text-5xl md:text-7xl font-bold text-center">Explora los cursos de RDN</h1>
        <p class="text-lg md:text-xl text-center">Aquí encontrarás cursos diseñados para ampliar conocimientos que te ayudarán a crecer profesionalmente.</p>
    </div>

    <section aria-labelledby="courses-heading" class="max-w-7xl mx-auto">

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center">
        
            {courses.map((course) => (
                // NIVEL 3: <article> (Dentro del componente CourseCard)
                <CourseCard 
                image={course.image}
                title={course.title}
                author={course.author}
                price={course.price}
                videoCount={course.videoCount}
                duration={course.duration}
                tag={course.tag}
                />
            ))}

        </div>

    </section>
</Layout>