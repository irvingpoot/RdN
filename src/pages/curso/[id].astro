---
// src/pages/curso/[id].astro
import Layout from '../../layouts/Layout.astro'; // Asegúrate de tener tu layout base
import CourseCard from '../../components/CourseCard.astro';
import { courses } from '../../data/courses.js';

// 1. Generamos las rutas estáticas para cada curso
export function getStaticPaths() {
    return courses.map((course) => ({
        params: { id: course.id },
        props: { course },
    }));
}

// 2. Obtenemos los datos del curso actual
const { course } = Astro.props;

// CONSTRUIMOS LA LISTA DE CARACTERÍSTICAS DINÁMICAMENTE
// Usamos los datos reales que acabamos de poner en courses.js
const features = [
    { icon: "level", label: "Nivel", value: course.minLevel },
    { icon: "video", label: "Contenido", value: `${course.totalLessons} Lecciones` }, // Ajusté etiqueta
    { icon: "clock", label: "Duración", value: course.duration },
    { icon: "cert", label: "Certificado", value: course.hasCertificate ? "Sí, Oficial" : "Asistencia" },
    { icon: "lang", label: "Idioma", value: course.language },
];

const relatedCourses = courses.filter((c) => c.id !== course.id).slice(0, 3);
---

<Layout title={course.title}>

    <section class="w-full pt-20 pb-12 px-4 border-b border-slate-100">
        <div class="max-w-4xl mx-auto text-center">
            
            <span class="inline-block bg-blue-950 text-gray-50 px-4 py-1.5 rounded-lg text-sm font-semibold tracking-wide mb-6">
                {course.category}
            </span>
        
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
                {course.title}
            </h1>
        
            <p class="text-xl mb-10 max-w-2xl mx-auto font-light leading-relaxed">
                {course.subtitle}
            </p>
        
            <div class="flex flex-col sm:flex-row justify-center items-center gap-4 mb-16">
                
                <button class="flex items-center gap-2 bg-blue-950 hover:bg-blue-900 hover:scale-105 text-gray-50 px-8 py-3.5 rounded-xl font-semibold transition-transform active:scale-95 shadow-md shadow-blue-200/20">
                    Inscribirse por {course.price}
                </button>
        
                <a href="#temario" class="bg-indigo-50 hover:bg-indigo-100 text-blue-950 px-8 py-3.5 rounded-xl font-semibold transition-transform hover:scale-105 active:scale-95 shadow-md shadow-indigo-200/20">
                    Ver Temario
                </a>
            </div>
        
            <div class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-12 md:divide-x divide-slate-200">
                
                <div class="flex items-center gap-4 px-4 w-full md:w-auto justify-center md:justify-start">
                    <div class="p-2 bg-white border border-slate-200 rounded-lg shadow-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-slate-700">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                        </svg>
                    </div>
                    <div class="text-left">
                        <p class="text-xs text-slate-500 font-medium uppercase tracking-wide">Contenido</p>
                        <p class="text-lg font-bold">{course.totalLessons} Lecciones</p>
                    </div>
                </div>
        
                <div class="flex items-center gap-4 px-4 w-full md:w-auto justify-center md:justify-start">
                    <div class="p-2 bg-white border border-slate-200 rounded-lg shadow-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-slate-700">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="text-left">
                        <p class="text-xs text-slate-500 font-medium uppercase tracking-wide">Requisito</p>
                        <p class="text-lg font-bold">{course.minLevel}</p>
                    </div>
                </div>
        
                <div class="flex items-center gap-4 px-4 w-full md:w-auto justify-center md:justify-start">
                    <div class="p-2 bg-white border border-slate-200 rounded-lg shadow-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-slate-700">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                        </svg>
                    </div>
                    <div class="text-left">
                        <p class="text-xs text-slate-500 font-medium uppercase tracking-wide">Duración</p>
                        <p class="text-lg font-bold">{course.duration}</p>
                    </div>
                </div>
        
            </div>
        </div>
    </section>

    <main id="temario" class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <div class="lg:col-span-2 space-y-12">
                
                <div class="rounded-3xl overflow-hidden shadow-lg h-64 md:h-96">
                    <img src={course.image} alt={course.title} class="w-full h-full object-cover" />
                </div>

                <div>
                    <h3 class="text-2xl font-bold  mb-6">Lo que aprenderás:</h3>
                    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {course.learningPoints.map(point => (
                            <li class="flex items-start gap-3">
                                <span class="text-slate-600 text-sm md:text-base leading-relaxed">{point}</span>
                            </li>
                        ))}
                    </ul>
                </div>

                <div class="prose prose-slate max-w-none text-slate-600">
                    {course.description.map(paragraph => (
                        <p>{paragraph}</p>
                    ))}
                </div>

                <div>
                    <h3 class="text-2xl font-bold  mb-4">Requisitos previos:</h3>
                    <ul class="list-disc list-inside space-y-2 text-slate-600 marker:text-indigo-400">
                        {course.requirements.map(req => (
                            <li>{req}</li>
                        ))}
                    </ul>
                </div>

            </div>
            <aside class="lg:sticky lg:top-8 h-fit space-y-8">
                
                <div class="bg-white border border-slate-200 rounded-2xl p-6 shadow-sm">
                    <h3 class="text-lg font-bold  mb-6">El curso incluye:</h3>
                    
                    <ul class="space-y-4 mb-8">
                        {features.map((item) => (
                        <li class="flex justify-between items-center text-sm">
                            <div class="flex items-center gap-3 text-slate-500 font-medium">
                                {item.icon === 'level' && <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>}
                                {item.icon === 'video' && <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>}
                                {item.icon === 'clock' && <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>}
                                {item.icon === 'cert' && <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>}
                                {item.icon === 'lang' && <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" /></svg>}
                                
                                <span>{item.label}</span>
                            </div>
                            <span class=" font-semibold">{item.value}</span>
                        </li>
                        ))}
                    </ul>

                    <div class="border-t border-slate-100 pt-6">
                        <div class="flex items-end gap-2 mb-4">
                            <span class="text-3xl font-bold">{course.price}</span>
                            <span class="text-slate-400 text-sm mb-1 line-through opacity-70">30% off</span> 
                        </div>
                        <button class="w-full py-3 bg-blue-950 hover:bg-blue-900 hover:scale-105 text-gray-50 font-bold rounded-xl shadow-lg shadow-indigo-200 transition-all active:scale-95">
                            Inscribirse Ahora
                        </button>
                    </div>
                </div>

                <div class="bg-slate-50 border border-slate-200 rounded-2xl p-5 flex items-center gap-4">
                    <div class="w-16 h-16 rounded-xl bg-slate-200 overflow-hidden shrink-0">
                        <img src={`https://ui-avatars.com/api/?name=${course.author}&background=c7d2fe&color=3730a3`} alt={course.author} class="w-full h-full object-cover" />
                    </div>
                    <div>
                        <p class="text-xs text-slate-500 font-bold uppercase tracking-wider mb-0.5">Instructor</p>
                        <h4 class="text-lg font-bold leading-tight">{course.author}</h4>
                        <div class="flex gap-2 mt-2">
                            <a href="#" class="text-slate-400 hover:text-indigo-600"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg></a>
                            <a href="#" class="text-slate-400 hover:text-indigo-600"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg></a>
                        </div>
                    </div>
                </div>

            </aside>
        </div>
    </main>

    <section class="w-full bg-slate-50 py-16 px-4 border-t border-slate-200">
        <div class="max-w-7xl mx-auto">
        
            <div class="flex flex-col md:flex-row justify-between items-end mb-10 gap-4">
                <div>
                    <h2 class="text-3xl font-bold text-slate-900 mb-2">Otros cursos de interés</h2>
                    <p class="text-slate-500">Amplía tu formación con estos programas recomendados.</p>
                </div>
                
                <a href="/cursos" class="bg-blue-950 hover:bg-blue-900 hover:scale-105 text-gray-50 font-semibold py-2.5 px-6 rounded-full transition-transform shadow-sm text-sm">
                    Ver todos los cursos
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center">
                {relatedCourses.map((related) => (
                    <CourseCard 
                        href={`/curso/${related.id}`}
                        image={related.image}
                        title={related.title}
                        author={related.author}
                        videoCount={related.totalLessons}
                        duration={related.duration}
                        tag={related.category}
                    />
                ))}
            </div>

        </div>
    </section>

</Layout>