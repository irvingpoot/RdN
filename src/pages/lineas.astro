---
import Layout from "../layouts/Layout.astro"
import WorkLineCard from "../components/WorkLineCard.astro"

const lineasTrabajo = [
    {
        title: "Investigación",
        description: "Fomentamos el desarrollo científico a través de la difusión y divulgación de hallazgos clave. Conectamos investigadores para potenciar estudios que transformen el entendimiento de las neurociencias.",
        image: "/lineas/investigacion.webp",
        icon: '<path d="M10 2v7.527a2 2 0 0 1-.211.896L4.72 20.55a1 1 0 0 0 .9 1.45h12.76a1 1 0 0 0 .9-1.45l-5.069-10.127A2 2 0 0 1 14 9.527V2"/><path d="M8.5 2h7"/><path d="M7 16h10"/>'
    },
    {
        title: "Formación Académica",
        description: "Impulsamos la excelencia profesional mediante programas educativos, cursos y talleres especializados. Nuestro objetivo es capacitar a la próxima generación de líderes en salud mental y neurología.",
        image: "/lineas/formacion.webp", 
        icon: '<path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>' 
    },
    {
        title: "Atención Clínica",
        description: "Ofrecemos servicios de atención integral con un enfoque multidisciplinario. Desde el diagnóstico hasta la rehabilitación, priorizamos el bienestar del paciente con estándares de calidad humana y técnica.",
        image: "/lineas/atencion.webp", 
        icon: '<path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>'
    },
    {
        title: "Vinculación",
        description: "Fortalecemos la 'Triple Hélice': Academia, Industria y Gobierno. Creamos alianzas estratégicas que permiten llevar los avances de las neurociencias a políticas públicas y aplicaciones reales.",
        image: "/lineas/vinculacion.webp",
        icon: '<circle cx="18" cy="5" r="3"/><circle cx="6" cy="12" r="3"/><circle cx="18" cy="19" r="3"/><line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/><line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/>'
    },
    {
        title: "Transferencia Tecnológica",
        description: "Facilitamos el proceso de convertir ideas innovadoras en herramientas tecnológicas tangibles. Apoyamos el desarrollo de dispositivos y software que mejoren la calidad de vida.",
        image: "/lineas/transferencia.webp",
        icon: '<rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/>'
    },
    {
        title: "Transferencia de Conocimiento",
        description: "Democratizamos el saber neurocientífico. Creamos puentes para que la información compleja sea accesible a la sociedad, empoderando a las comunidades a través de la educación.",
        image: "/lineas/conocimiento.webp",
        icon: '<path d="M12 2a7 7 0 0 1 7 7c0 2.38-1.19 4.47-3 5.74V17a2 2 0 0 1-2 2H10a2 2 0 0 1-2-2v-2.26C6.19 13.47 5 11.38 5 9a7 7 0 0 1 7-7z"/><path d="M9 21h6"/>'
    }
]
---

<Layout title="RdN: Líneas de trabajo">
    <main>
        <div class="relative py-32 text-center">
            <div class="relative z-10 px-5 animate-fade-in-down">
                <h1 class="text-5xl md:text-8xl font-bold mb-6">
                    Líneas de Trabajo
                </h1>
                <p class="text-lg md:text-xl max-w-2xl mx-auto font-light">
                    Ejes estratégicos que definen nuestro impacto en la sociedad y la ciencia.
                </p>
            </div>
        </div>

        <section class="max-w-7xl mx-auto px-5 py-10 md:py-20 pb-32">
            
            <div class="flex flex-col gap-8 md:gap-0">
                {lineasTrabajo.map((linea, index) => (
                    <WorkLineCard 
                        title={linea.title}
                        description={linea.description}
                        image={linea.image}
                        icon={linea.icon}
                        index={index}
                    />
                ))}
            </div>

        </section>
    </main>
</Layout>