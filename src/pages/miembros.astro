        <Miembro 
            class="animate-zoom-in timeline-view animate-range-[entry_20%_cover_40%]"
            nombre="Dr. Jorge Efraín Salazar Ceballos"
            imagen="/neuro.webp"
            membresia="Fundador"  bio="El Dr. Jorge Efraín Salazar Ceballos es un especialista en neurología..."
        />
        
        <Miembro 
            class="animate-zoom-in timeline-view animate-range-[entry_20%_cover_40%]"
            nombre="Dra. Ana López"
            imagen="/neuro.webp"
            membresia="Miembro Activo" bio="Especialista en neurofisiología clínica con enfoque en..."
        />

        <Miembro 
            class="animate-zoom-in timeline-view animate-range-[entry_20%_cover_40%]"
            nombre="Est. Pedro Pérez"
            imagen="/neuro.webp"
            membresia="En Formación" bio="Estudiante de doctorado en neurociencias cognitivas..."
