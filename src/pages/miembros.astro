---
import Layout from "../layouts/Layout.astro"
import Miembro from "../components/Miembro.astro"
import MembresiaCard from "../components/MembresiaCard.astro"
---

<Layout title="RdN: Miembros">
    <h1 class="text-center text-8xl font-semibold py-20 animate-fade-in-down max-sm:text-5xl max-sm:px-5 max-lg:text-7xl max-lg:pb-10">Miembros de Red de Neurociencias</h1>
    <h1 class="text-center text-6xl font-semibold py-10 animate-fade-in-up max-sm:text-4xl max-lg:text-5xl">Membresías</h1>
    <div class="flex flex-wrap justify-center items-center gap-10">
        <MembresiaCard 
            class="animate-fade-in-up animate-delay-300"
            titulo="Fundador"
            descripcion="Son los que constituyen la sociedad legal. Pueden votar y ser elegidos."
        />
        <MembresiaCard 
            class="animate-fade-in-up animate-delay-300"
            titulo="Honorarios"
            descripcion="Personas destacadas de la comunidad internacional y nacional."
        />
        <MembresiaCard 
            class="animate-fade-in-up animate-delay-300"
            titulo="Activos"
            descripcion="Profesionista que puede votar y ser elegido."
        />
        <MembresiaCard 
            class="animate-fade-in-up animate-delay-300"
            titulo="Asociados"
            descripcion="Profesionista que solo puede votar."
        />
        <MembresiaCard 
            class="animate-fade-in-up animate-delay-300"
            titulo="En formación"
            descripcion="Son estudiantes en formación que no votan ni pueden ser elegidos."
        />
        <MembresiaCard 
            class="animate-fade-in-up animate-delay-300"
            titulo="Internacional"
            descripcion="Residentes permanentes en el extranjero que cumplen los requisitos."
        />
    </div>

    <h1 class="text-center text-6xl font-semibold pt-20 pb-10 animate-zoom-in timeline-view animate-range-[entry_20%_cover_60%]">Miembros activos de RdN</h1>

    <h1 class="text-center text-5xl font-semibold py-10 animate-zoom-in timeline-view animate-range-[entry_20%_cover_60%]">Neurología</h1>
